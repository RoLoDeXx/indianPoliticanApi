                            <div class="col-sm-1">
                                <p class="card-text icon-style"><i class="fas fa-car"></i></p>
                            </div>
                            <div class="col-sm-11">
                                <p class="card-title icon-style"><i class="fas fa-rupee-sign"></i>
                                    {{politicianB.liabilities}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
